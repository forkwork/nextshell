{
  "server": {
    "port": 3000,
    "host": "localhost",
    "publicPath": "/public",
    "compressionLevel": 6
  },
  "logging": {
    "level": "debug",
    "format": "combined",
    "directory": "logs",
    "maxSize": "20m",
    "maxFiles": "14d",
    "httpLogging": true
  },
  "security": {
    "cors": {
      "origin": "*",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedHeaders": ["Content-Type", "Authorization"]
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100,
      "standardHeaders": true,
      "legacyHeaders": false
    },
    "helmet": {
      "contentSecurityPolicy": false,
      "xssFilter": true
    }
  },
  "themes": {
    "defaultPath": "themes",
    "defaultTheme": "nextshell_bundled/nextshell_dark.yaml",
    "previewsEnabled": true,
    "backgroundImagesPath": "themes"
  },
  "keysets": {
    "defaultPath": "keysets",
    "defaultKeyset": "default-nextshell-keybindings.yaml"
  },
  "workspace": {
    "defaultFontSize": 14,
    "defaultFontFamily": "monospace",
    "maxTabs": 10,
    "saveSessionOnExit": true,
    "maxHistoryItems": 1000,
    "accessibility": {
      "defaultVerbosityLevel": "standard",
      "highContrastMode": false
    }
  },
  "workflows": {
    "directory": "workflows",
    "enabledByDefault": true,
    "autoloadWorkflows": true
  }
}
